<!doctype html>

<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <% include ../public/external_stylesheets %>

        <link rel="stylesheet" href="/stylesheets/app.css">
        
        <title><%= place.name %></title>
    </head>

    <body>
        <% include header %>

            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <section id="moreInfo">
                            <h1><%= place.name %>, <%= place.country %></h1>
                            
                            <img src="<%= place.image %>" alt="<%= place.name %>" class="img-fluid img-thumbnail">
                            
                            <p><%= place.desc %></p>
                        </section>
                        <p class="text-white mt-5">Comments</p>
                        <section>
                            <div id="moreInfoComments">
                                <p>
                                    <% place.comments.forEach(function(comment){ %>
                                        <p><%= comment.text %></p>
                                        <p>- <b class="text-muted"><%= comment.author.username %></b></p>
                                    <% }); %>
                                </p>
                            </div>
                        </section>
                        <p class="mt-3">
                            <a href="/places/<%= place._id %>/comments/new">Add New Comment</a>
                        </p>
                    </div>
                </div>
            </div>
        

        
        
        <% include footer %>